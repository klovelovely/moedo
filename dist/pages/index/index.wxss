/**index.wxss**/

.header {
  display: flex;
  padding: 20rpx;
  margin: 0 auto;
  text-align: center;
}

.header .title {
  font-size: 80rpx;
  color: #ccc;
}

.header .for {
  position: absolute;
  top: 15rpx;
  right: 30rpx;
  color: #ccc;
  font-size: 30rpx;
}

.header .for::before {
  content: 'For';
  vertical-align: middle;
}

.header .for .photo {
  margin-left: 10rpx;
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}

.header .for .nickName {
  margin-left: 10rpx;
  font-size: 20rpx;
  vertical-align: middle;
}

.section {
  width: 100%;
  padding: 20rpx;
}

/* 添加 todo */

.section input {
  padding: 20rpx;
  border: 1px solid #ccc;
  box-shadow: inset 0 -2px 1px rgba(0, 0, 0, 0.03);
  -webkit-font-smoothing: antialiased;
  -moz-font-smoothing: antialiased;
  font-smoothing: antialiased;
}

.section input.active {
  border-color: #404040;
}

.done {
  color: #ccc;
}
